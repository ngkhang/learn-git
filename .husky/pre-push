# .husky/pre-push
#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Get the list of staged files
STAGED_FILES=$(git diff --cached --name-only)

# Check if there are JS/TS files staged
if echo "$STAGED_FILES" | grep -q -E '\.(js|jsx|ts|tsx)$'; then
  echo "üîç Staged JS/TS files detected. Running lint..."
  echo "$STAGED_FILES" | grep -E '\.(js|jsx|ts|tsx)$' | xargs npx next lint --file || {
      echo "‚ùå Lint failed. Please fix the errors before pushing."
      exit 1
  }
  echo "‚úÖ Lint passed!"
else
  echo "‚è© No staged JS/TS files detected. Skipping lint."
fi